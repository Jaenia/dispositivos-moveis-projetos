<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:minHeight="100dp"
    android:maxHeight="200dp"
    android:background="@color/colorAccent"
    >

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvListaNome"
        android:text="PolÃ­cia"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvListaBotaoLigar"
        app:layout_constraintRight_toLeftOf="@+id/tvListaNumero"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintHorizontal_weight="2"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvListaNumero"
        android:text="190"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvListaBotaoLigar"
        app:layout_constraintLeft_toRightOf="@+id/tvListaNome"
        app:layout_constraintHorizontal_weight="1"
        android:maxLines="2"
        android:ellipsize="end"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tvListaBotaoLigar"
        app:layout_constraintTop_toBottomOf="@+id/tvListaNome"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="LIGAR"
        android:src="@drawable/ic_add_contato"
        android:importantForAccessibility="yes"

        />
</android.support.constraint.ConstraintLayout>